@model OnlineInfoService.Models.Event
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<div>
    <h4>Date: @Model.Date.ToShortDateString()</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Subject:</dt>
        <dd>@Model.Subject.Name</dd>
        <dt>Location:</dt> 
        <dd>@Model.Location</dd>
        <dt>Details:</dt> 
        <dd>@Model.Description</dd>
    </dl>
</div>