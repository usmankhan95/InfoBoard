@model OnlineInfoService.ViewModels.MemberFormViewModel
@{
    ViewBag.Title = "MemberForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Title</h2>

@using (Html.BeginForm("Save", "Member"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Member.Name)
        @Html.TextBoxFor(m => m.Member.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Member.Name)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Member.Gender)
        @Html.DropDownListFor(m => m.Member.Gender, new SelectList("MF"), "Choose Gender" ,new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Member.SubjectId)
        @Html.DropDownListFor(m => m.Member.SubjectId, new SelectList(Model.Subjects, "Id", "Name"), "Select Subject", new{@class ="form-control"})
        @Html.ValidationMessageFor(m => m.Member.SubjectId)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Member.DateOfBirth) e.g. 01 Jan 2000
        @Html.TextBoxFor(m => m.Member.DateOfBirth, "{0: d MMM yyyy}", new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Member.Address)
        @Html.TextAreaFor(m => m.Member.Address, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Member.Address)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Member.WorkLocation)
        @Html.TextBoxFor(m => m.Member.WorkLocation, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Member.WorkLocation)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Member.ContactNumber)
        @Html.TextBoxFor(m => m.Member.ContactNumber, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Member.ContactNumber)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Member.Email)
        @Html.TextBoxFor(m => m.Member.Email, new {@class = "form-control"})
        @Html.ValidationMessageFor(m => m.Member.Email)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Member.Biography)
        @Html.TextAreaFor(m => m.Member.Biography, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Member.MoreInfo)
        @Html.TextBoxFor(m => m.Member.MoreInfo, new { @class = "form-control" })
    </div>
    
    @Html.HiddenFor((m => m.Member.Id))
    @Html.AntiForgeryToken()
    <button type ="submit" class="btn btn-primary">Save</button>    
}

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}

